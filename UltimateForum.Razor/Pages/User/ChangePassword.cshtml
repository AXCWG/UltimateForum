@page "/User/ChangePassword"
@model UltimateForum.Razor.Pages.User.ChangePassword

<div class=" mx-auto  d-flex flex-column justify-content-center align-items-center col-6">
    <div class="w-100">
        <h1 class="display-4">更改密码</h1>
        <div class="card p-4 ">
            <form method="post">
                <div class="d-flex flex-column gap-3">
                    <span class="text-danger" asp-validation-for="@Model.PasswordChange!.OldPassword" ></span>
                    <input class="form-control" placeholder="旧密码" type="password" asp-for="@Model.PasswordChange!.OldPassword"/>
                    <span class="text-danger" asp-validation-for="@Model.PasswordChange!.NewPassword" ></span>
                    <input class="form-control" placeholder="新密码" type="password" asp-for="@Model.PasswordChange!.NewPassword"/>
                    <span class="text-danger" asp-validation-for="@Model.PasswordChange!.ConfirmPassword" ></span>
                    <input class="form-control" placeholder="确认新密码" type="password" asp-for="@Model.PasswordChange!.ConfirmPassword"/>
                    <button class="btn btn-primary" type="submit"  asp-page-handler="ChangePassword">更改</button>
                </div>

            </form>

        </div>
    </div>
    
</div>

<partial name="Validation"/>